{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "target": "es2019",
    "inlineSourceMap": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "sdk/**/*.ts"]
}
